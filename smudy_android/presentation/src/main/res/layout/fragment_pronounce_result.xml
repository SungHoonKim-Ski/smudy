<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.study.pronounce.PronounceResultFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@color/gray">
        <TextView
            android:id="@+id/tv_lyric"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/action_sign_in_short"
            android:textAppearance="@style/Noto_Sans.TEXT.B.20"/>
        <TextView
            android:id="@+id/tv_translated_lyric"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/action_sign_in_short"
            android:textAppearance="@style/Noto_Sans.TEXT.L.14"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="정밀 report"
        android:textAppearance="@style/Gyungi.TITLE_TEXT.B.12"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="아래 버튼을 눌러 분석 결과를 확인하세요."
        android:textAppearance="@style/Noto_Sans.TEXT.L.11"/>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

        </androidx.cardview.widget.CardView>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:gravity="center"
                android:textAppearance="@style/Noto_Sans.TEXT.L.11"
                android:drawableTop="@drawable/ic_app_character"
                android:text="Smudy" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="asdfasdfasdfasdf" />
    </TableRow>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:background="@color/card_background"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_album_jacket"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:contentDescription="@string/all_album_jacket_img_description"
            android:layout_marginStart="@dimen/fragment_padding"
            android:layout_marginVertical="@dimen/fragment_padding"
            tools:src="@drawable/app_logo"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/fragment_padding"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_album_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:text="@string/action_sign_in"
                android:textAppearance="@style/Noto_Sans.TEXT.B.16"/>
            <TextView
                android:id="@+id/tv_album_singer"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="top"
                android:text="@string/action_sign_in_short"
                android:textAppearance="@style/Noto_Sans.TEXT.R.11" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="end"
                android:orientation="horizontal">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/smudy_mint"
                    android:textAppearance="@style/Nanum_Square.TEXT.EB.12"
                    android:textColor="@color/white"
                    android:paddingVertical="0dp"
                    android:text="다시 연습하기" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/smudy_mint"
                    android:textAppearance="@style/Nanum_Square.TEXT.EB.12"
                    android:textColor="@color/white"
                    android:paddingVertical="0dp"
                    android:text="완료" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>