FROM openjdk:17-jdk-buster

WORKDIR /app

COPY . /app

RUN chmod +x ./gradlew
RUN ./gradlew build -x test

# 런타임 스테이지
FROM openjdk:21-slim
WORKDIR /app

# 빌드 스테이지에서 생성된 JAR 파일을 런타임 이미지로 복사
COPY --from=build /workspace/app/build/libs/*.jar backend_dummy-0.0.1-SNAPSHOT.jar

ENTRYPOINT ["java", "-jar", "backend_dummy-0.0.1-SNAPSHOT.jar"]
